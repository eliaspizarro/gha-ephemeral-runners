# GitHub Token (obligatorio)
# Token con permisos para generar registration tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Configuración del API Gateway
PORT=8080
ORCHESTRATOR_URL=http://orchestrator:8000

# Autenticación (opcional)
API_KEY=TU_API_SECRETA
ENABLE_AUTH=false

# Rate Limiting
MAX_REQUESTS=100
RATE_WINDOW=60

# Configuración del Orquestador
RUNNER_IMAGE=TU_REGISTRY/gha-runner:latest

# Configuración de Registry
REGISTRY=TU_REGISTRY
REGISTRY_USERNAME=TU_USERNAME
REGISTRY_PASSWORD=TU_PASSWORD

# Version de las imágenes (para producción)
IMAGE_VERSION=latest

# Configuración de Runners
IDLE_TIMEOUT=3600
